{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "flake8.args": [
        "--max-line-length=100",
        "--ignore=E501,W503,W504,E203",
        "--max-complexity=10",
      ],
    "isort.args": ["--profile", "black"],

}